PROGRAM=life
import CXX=c++
import CXXFLAGS=-pipe -O3 -flto -Wall -Wextra -Wpedantic -Werror
import LDFLAGS=-flto

CXXFLAGS+=-I include

ifeq (@(TUP_PLATFORM),win32)
	PROGRAM_SUFFIX=.exe
	LDFLAGS+=-L lib -lraylib -lopengl32 -lgdi32 -lwinmm -lws2_32
else
	LDFLAGS+=-lraylib
endif

!cxx = |> ^cj CXX %f^ $(CXX) -c -o %o %f $(CXXFLAGS) |>
!ld = |> ^cj LD %o^ $(CXX) -o %o %f $(LDFLAGS) |>

: foreach src/*.cpp |> !cxx |> obj/%B.o {objs}
: {objs} |> !ld |> $(PROGRAM)$(PROGRAM_SUFFIX)
